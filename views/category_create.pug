extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div
      label(for='name') Name:
      input(type='text', name='name' value=(undefined===category ? '' : category.name))
      label(for='description') Description:
      input(type='text', name='description' value=(undefined===category ? '' : category.description))
    button(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg